{
  "name": "starter",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "type:check": "tsc --noEmit --skipLibCheck",
    "commit": "git-cz",
    "lint": "eslint --fix .",
    "format": "prettier --write '**/*.{ts,tsx,js,vue,css,scss,html,json}'",
    "chrome": "open -n /Applications/Google\\ Chrome.app/ --args --disable-web-security  --user-data-dir=$HOME/MyChromeDevUserData/",
    "api": "tsg-tgjz -c ./src/api/tsg.config.ts"
  },
  "dependencies": {
    "ant-design-vue": "^2.2.2",
    "axios": "^0.21.1",
    "path-to-regexp": "^6.2.0",
    "vue": "^3.1.5",
    "vue-router": "^4.0.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@types/prettier": "^2.3.2",
    "@types/swagger-schema-official": "^2.0.22",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "@vitejs/plugin-vue-jsx": "^1.1.6",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "less": "^4.1.1",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "tsg-tgjz": "^3.3.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.3",
    "vite-plugin-mockit": "^1.0.2",
    "yorkie": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -E GIT_PARAMS"
  },
  "lint-staged": {
    "*.{ts,tsx,vue,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,html,json}": [
      "prettier --write"
    ]
  }
}
