{
  "name": "starter",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "uat": "vite build --mode uat",
    "release": "vite build",
    "serve": "vite preview -base /",
    "type:check": "tsc --noEmit --skipLibCheck",
    "commit": "git-cz",
    "lint": "eslint --fix .",
    "format": "prettier --write '**/*.{ts,tsx,js,vue,css,scss,html,json}'",
    "chrome": "open -n /Applications/Google\\ Chrome.app/ --args --disable-web-security  --user-data-dir=$HOME/MyChromeDevUserData/",
    "api": "tsg -c ./src/api/tsg.config.ts",
    "gen:icon-types": "node scripts/icon-types.mjs",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@titanmatrix/vue3-class-component": "^0.2.16",
    "ant-design-vue": "^2.2.8",
    "axios": "^0.21.1",
    "path-to-regexp": "^6.2.0",
    "reflect-metadata": "^0.1.13",
    "ts-deepmerge": "^1.1.0",
    "ts-essentials": "^9.0.0",
    "tslib": "^2.3.1",
    "vue": "^3.2.20",
    "vue-router": "4.0.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@types/prettier": "^2.4.1",
    "@types/swagger-schema-official": "^2.0.22",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vitejs/plugin-vue-jsx": "^1.2.0",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "less": "^4.1.2",
    "lint-staged": "^11.2.3",
    "patch-package": "^6.4.7",
    "prettier": "^2.4.1",
    "sass": "^1.43.2",
    "ts-gear": "^4.1.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.10",
    "vite-plugin-aliyun-oss": "^1.0.1",
    "vite-plugin-mockit": "^1.0.2",
    "vite-plugin-svg-icons": "^1.0.5",
    "vite-plugin-ts": "^1.1.8",
    "yorkie": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -E GIT_PARAMS"
  },
  "lint-staged": {
    "*.{ts,tsx,vue,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,html,json}": [
      "prettier --write"
    ]
  }
}
